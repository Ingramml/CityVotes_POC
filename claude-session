#!/usr/bin/env python3
"""
Claude Session Manager Shortcut
Quick access to session archiver functionality
"""

import sys
import os
from pathlib import Path

# Add the project to Python path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root / "daily_claude_logs"))

# Change to project directory
os.chdir(project_root)

# Import and run the session archiver
from claude_session_archiver import main

if __name__ == "__main__":
    main()